{% extends "base.html.twig" %}{# empty Twig template #}


{% block body %}
 <!-- App Capsule -->
    <div id="appCapsule">

        <div class="section mt-2">

            
            <div class="card">
                <div class="card-body">
                     {% for message in app.flashes('warning') %}
        <div class="alert alert-warning alert-dismissible">
            <button type="button" class="close" data-dismiss="alert" aria-hidden="true">×</button>
            <h5><i class="icon fas fa-exclamation-triangle"></i> Alerte !</h5>

            {{ message }}
        </div>
    {% endfor %}

    {% for message in app.flashes('danger') %}
        <div class="alert alert-danger alert-dismissible">
            <button type="button" class="close" data-dismiss="alert" aria-hidden="true">×</button>
            <h5><i class="icon fas fa-exclamation-triangle"></i> Alerte !</h5>

            {{ message }}
        </div>
    {% endfor %}

    <form action="{{ path('bk_check_code',{'id':id}) }}" method="POST">
        <div class="form-group">
            <label>Insérer votre code</label>
            <input type="text" name="codeVerif" />
        </div>
        <input class="btn btn-primary" type="submit" value="Valider"/>
    </form>
    <p>Accéder à l'adresse email relié à votre compte pour avoir votre code de vérification</p>
                </div>
            </div>    
        </div>


    </div>
    <!-- * App Capsule -->
   
{% endblock %}
