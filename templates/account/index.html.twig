                <span class="right badge badge-danger"></span>
            </p>
        </a>
    </li>

{% endblock %}
{% block body %}
    <h1>Index des comptes</h1>

    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>Numéro de Compte</th>
                <th>Nom du Titulaire</th>
                <th>Actif</th>
                <th>Solde</th>
                <th>Retrait</th>
                <th>Dépôt</th>
                <th>Paiement</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
        {% for account in accounts %}
            <tr>
                <td>{{ account.id }}</td>
                <td>{{ account.accountNo }}</td>
                <td>{{ account.user.nom }} {{ account.user.prenom }}</td>
                <td>{{ account.isActive ? 'Oui' : 'Non' }}</td>
                <td>{{ account.balance }}</td>
                <td>{{ account.withdraw }}</td>
                <td>{{ account.deposit }}</td>
                <td>{{ account.payment }}</td>
                <td>
                    <a href="{{ path('account_show', {'id': account.id}) }}">Voir</a>
                    <a href="{{ path('account_edit', {'id': account.id}) }}">Modifier</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="8">Aucun enregistrement trouvé</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('account_new') }}">Créer un nouveau</a>
{% endblock %}
