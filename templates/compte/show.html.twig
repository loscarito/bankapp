{% extends 'base.html.twig' %}

{% block title %}Compte{% endblock %}

{% block body %}
    <h1>Compte</h1>

    <table class="table">
        <tbody>
            <tr>
                <th>Identifiant</th>
                <td>{{ compte.id }}</td>
            </tr>
            <tr>
                <th>Nom d'utilisateur</th>
                <td>{{ compte.username }}</td>
            </tr>
            <tr>
                <th>Rôles</th>
                <td>{{ compte.roles ? compte.roles|json_encode : '' }}</td>
            </tr>
            <tr>
                <th>Mot de passe</th>
                <td>{{ compte.password }}</td>
            </tr>
        </tbody>
    </table>

    <a href="{{ path('compte_index') }}">Retour à la liste</a>

    <a href="{{ path('compte_edit', {'id': compte.id}) }}">Éditer</a>

    {{ include('compte/_delete_form.html.twig') }}
{% endblock %}
