{% extends 'base.html.twig' %}

{% block title %}Index des Comptes{% endblock %}

{% block body %}
    <h1>Index des Comptes</h1>

    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>Nom d'utilisateur</th>
                <th>Rôles</th>
                <th>Mot de passe</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
        {% for compte in comptes %}
            <tr>
                <td>{{ compte.id }}</td>
                <td>{{ compte.username }}</td>
                <td>{{ compte.roles ? compte.roles|json_encode : '' }}</td>
                <td>{{ compte.password }}</td>
                <td>
                    <a href="{{ path('compte_show', {'id': compte.id}) }}">voir</a>
                    <a href="{{ path('compte_edit', {'id': compte.id}) }}">modifier</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="5">Aucun enregistrement trouvé</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('compte_new') }}">Créer un nouveau</a>
{% endblock %}
