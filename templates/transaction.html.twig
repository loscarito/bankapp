{% endblock %}

{% block body %}
    <form action="{{ path('bk_tr_add')}}" method="POST" class="">
        {{ form_rest(form) }}
        <button type="submit" class="btn btn-info pull-right">Valider</button>
    </form>

    {% for message in app.flashes('notice') %}
        <div class="flash-notice">
            {{ message }}
        </div>
    {% endfor %}
{% endblock %}
