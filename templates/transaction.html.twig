                <span class="badge badge-info right">{{ app.user.user.account.transactions | length }}</span>
            </p>
        </a>
    </li>

    <li class="nav-item">
        <a href="{{ path('bk_tr1_add') }}" class="nav-link">
            <i class="nav-icon fas fa-th"></i>
