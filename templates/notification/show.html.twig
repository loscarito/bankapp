{% extends 'base.html.twig' %}

{% block title %}Notification{% endblock %}

{% block body %}
    <h1>Notification</h1>

    <table class="table">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ notification.id }}</td>
            </tr>
            <tr>
                <th>Type</th>
                <td>{{ notification.type }}</td>
            </tr>
            <tr>
                <th>Numéro</th>
                <td>{{ notification.number }}</td>
            </tr>
            <tr>
                <th>Nouveau</th>
                <td>{{ notification.new }}</td>
            </tr>
            <tr>
                <th>Contenu</th>
                <td>{{ notification.contenu }}</td>
            </tr>
        </tbody>
    </table>

    <a href="{{ path('notification_index') }}">Retour à la liste</a>

    <a href="{{ path('notification_edit', {'id': notification.id}) }}">Éditer</a>

    {{ include('notification/_delete_form.html.twig') }}
{% endblock %}
