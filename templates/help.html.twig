{% extends "base.html.twig" %}


{% block body %}
<div class="appHeader">
        <div class="left">
            <a href="{{ path('bk_home') }}" class="headerButton goBack">
                <ion-icon name="chevron-back-outline"></ion-icon>
            </a>
        </div>
        <div class="pageTitle">
            Demander assistance
        </div>
        <div class="right">
            <a href="{{ path('bk_inbox') }}" class="headerButton">
