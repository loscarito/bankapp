{% endblock %}
{% block body %}
    <h1>Transaction</h1>

    <table class="table">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ transaction.id }}</td>
            </tr>
            <tr>
                <th>Date</th>
                <td>{{ transaction.date ? transaction.date|date('Y-m-d H:i:s') : '' }}</td>
            </tr>
            <tr>
                <th>Référence</th>
                <td>{{ transaction.reference }}</td>
            </tr>
            <tr>
                <th>Description</th>
                <td>{{ transaction.description }}</td>
            </tr>
            <tr>
                <th>Débit</th>
                <td>{{ transaction.isDebit ? 'Oui' : 'Non' }}</td>
            </tr>
            <tr>
                <th>Crédit</th>
                <td>{{ transaction.isCredit ? 'Oui' : 'Non' }}</td>
            </tr>
            <tr>
                <th>Montant</th>
                <td>{{ transaction.Amount }}</td>
            </tr>
            <tr>
                <th>Statut</th>
                <td>{{ transaction.status }}</td>
            </tr>
            <tr>
                <th>Niveau</th>
                <td>{{ transaction.level }}</td>
            </tr>
        </tbody>
    </table>

    <a href="{{ path('transaction_index') }}">Retour à la liste</a>

    <a href="{{ path('transaction_edit', {'id': transaction.id}) }}">Modifier</a>

    {{ include('transaction/_delete_form.html.twig') }}
{% endblock %}
