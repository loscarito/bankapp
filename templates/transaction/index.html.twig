{% block body %}
    <h1>Index des Transactions</h1>

    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>Date</th>
                <th>Référence</th>
                <th>Description</th>
                <th>Est un Débit</th>
                <th>Est un Crédit</th>
                <th>Montant</th>
                <th>Statut</th>
                <th>Niveau</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
        {% for transaction in transactions %}
            <tr>
                <td>{{ transaction.id }}</td>
                <td>{{ transaction.date ? transaction.date|date('Y-m-d H:i:s') : '' }}</td>
                <td>{{ transaction.reference }}</td>
                <td>{{ transaction.description }}</td>
                <td>{{ transaction.isDebit ? 'Oui' : 'Non' }}</td>
                <td>{{ transaction.isCredit ? 'Oui' : 'Non' }}</td>
                <td>{{ transaction.Amount }}</td>
                <td>{{ transaction.status }}</td>
                <td>{{ transaction.level }}</td>
                <td>
                    <a href="{{ path('transaction_show', {'id': transaction.id}) }}">Voir</a>
                    <a href="{{ path('transaction_edit', {'id': transaction.id}) }}">Modifier</a>

                    <a href="{{ path('info_tr_new', {'id': transaction.id}) }}">Ajouter une mise à jour</a>
                    <a href="{{ path('info_tr_admin', {'id': transaction.id}) }}">Suivi</a>

                    <a href="{{ path('info_tr_index', {'id': transaction.id}) }}">Lister</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="10">Aucun enregistrement trouvé</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('transaction_new') }}">Créer un nouveau</a>
{% endblock %}
