{% block body %}
    <h1>Prêt</h1>

    <table class="table">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ loan.id }}</td>
            </tr>
            <tr>
                <th>Montant</th>
                <td>{{ loan.amount }}</td>
            </tr>
            <tr>
                <th>Durée</th>
                <td>{{ loan.duration }}</td>
            </tr>
            <tr>
                <th>Date</th>
                <td>{{ loan.date ? loan.date|date('Y-m-d H:i:s') : '' }}</td>
            </tr>
            <tr>
                <th>Détail</th>
                <td>{{ loan.detail }}</td>
            </tr>
            <tr>
                <th>Approuvé</th>
                <td>{{ loan.isApproved ? 'Oui' : 'Non' }}</td>
            </tr>
        </tbody>
    </table>

    <a href="{{ path('loan_index') }}">Retour à la liste</a>

    <a href="{{ path('loan_edit', {'id': loan.id}) }}">Éditer</a>

