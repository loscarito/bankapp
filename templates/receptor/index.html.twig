{% endblock %}
{% block body %}
    <h1>Index des destinataires</h1>

    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>Nom</th>
                <th>Prénom</th>
                <th>Swift</th>
                <th>Iban</th>
                <th>Numéro de compte</th>
                <th>Pays</th>
                <th>Ville</th>
                <th>Adresse</th>
                <th>Email</th>
                <th>Code postal</th>
                <th>Téléphone</th>
                <th>Code de vérification</th>
                <th>Vérifié</th>
                <th>Date</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
        {% for receptor in receptors %}
            <tr>
                <td>{{ receptor.id }}</td>
                <td>{{ receptor.nom }}</td>
                <td>{{ receptor.prenom }}</td>
                <td>{{ receptor.swift }}</td>
                <td>{{ receptor.iban }}</td>
                <td>{{ receptor.accountNo }}</td>
                <td>{{ receptor.pays }}</td>
                <td>{{ receptor.ville }}</td>
                <td>{{ receptor.address }}</td>
                <td>{{ receptor.email }}</td>
                <td>{{ receptor.postal }}</td>
                <td>{{ receptor.tel }}</td>
                <td>{{ receptor.verificode }}</td>
                <td>{{ receptor.isVerify ? 'Oui' : 'Non' }}</td>
                <td>{{ receptor.date ? receptor.date|date('Y-m-d H:i:s') : '' }}</td>
                <td>
                    <a href="{{ path('receptor_show', {'id': receptor.id}) }}">Voir</a>
                    <a href="{{ path('receptor_edit', {'id': receptor.id}) }}">Modifier</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="16">Aucun enregistrement trouvé</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('receptor_new') }}">Créer un nouveau</a>
{% endblock %}
