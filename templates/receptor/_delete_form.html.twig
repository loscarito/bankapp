<form method="post" action="{{ path('receptor_delete', {'id': receptor.id}) }}" onsubmit="return confirm('Êtes-vous sûr de vouloir supprimer cet élément ?');">
    <input type="hidden" name="_method" value="DELETE">
    <input type="hidden" name="_token" value="{{ csrf_token('delete' ~ receptor.id) }}">
    <button class="btn">Supprimer</button>
</form>
