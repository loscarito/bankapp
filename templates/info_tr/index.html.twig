    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>Date</th>
                <th>Description</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
        {% for info_tr in info_trs %}
            <tr>
                <td>{{ info_tr.id }}</td>
                <td>{{ info_tr.date ? info_tr.date|date('Y-m-d H:i:s') : '' }}</td>
                <td>{{ info_tr.description }}</td>
                <td>
                    <a href="{{ path('info_tr_show', {'id': info_tr.id,'sid': info_tr.transaction.id}) }}">Afficher</a>
                    <a href="{{ path('info_tr_edit', {'id': info_tr.id,'sid': info_tr.transaction.id }) }}">Modifier</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="4">Aucun enregistrement trouvé</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('info_tr_new',{'id':id}) }}">Créer un nouveau</a>
