{% block body %}
    <h1>Message</h1>

    <table class="table">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ message.id }}</td>
            </tr>
            <tr>
                <th>De</th>
                <td>{{ message.fromu }}</td>
            </tr>
            <tr>
                <th>Email de l'Expéditeur</th>
                <td>{{ message.fromemail }}</td>
            </tr>
            <tr>
                <th>Mini-description</th>
                <td>{{ message.smalldesc }}</td>
            </tr>
            <tr>
                <th>À</th>
                <td>{{ message.toa }}</td>
            </tr>
            <tr>
                <th>Sujet</th>
                <td>{{ message.subject }}</td>
            </tr>
            <tr>
                <th>Contenu</th>
                <td>{{ message.content }}</td>
            </tr>
            <tr>
                <th>Type</th>
                <td>{{ message.type }}</td>
            </tr>
            <tr>
                <th>Date</th>
                <td>{{ message.date ? message.date|date('Y-m-d H:i:s') : '' }}</td>
            </tr>
        </tbody>
    </table>

    <a href="{{ path('message_index') }}">Retour à la liste</a>

    <a href="{{ path('message_edit', {'id': message.id}) }}">Modifier</a>

    {{ include('message/_delete_form.html.twig') }}
{% endblock %}
