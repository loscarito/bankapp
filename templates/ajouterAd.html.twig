{% block body %}
   {% block body %}
    <p class="login-box-msg">Créez un compte avec nous</p>

    {{ form_start(registrationForm) }}

    <div class="input-group mb-3">
        {{ form_widget(registrationForm.username,{'attr': {'class': 'form-control', 'placeholder':'Nom d\'utilisateur'}}) }}
        <div class="input-group-append">
            <div class="input-group-text">
                <span class="fas fa-user"></span>
            </div>
        </div>
    </div>
    <div class="input-group mb-3">
        {{ form_widget(registrationForm.plainPassword,{'attr': {'class': 'form-control','placeholder':'Mot de passe'}}) }}
        <div class="input-group-append">
            <div class="input-group-text">
                <span class="fas fa-key"></span>
            </div>
        </div>
    </div>
    <div class="input-group mb-3">
        {{ form_widget(registrationForm.user.nom,{'attr': {'class': 'form-control','placeholder':'Prénom'}}) }}
        <div class="input-group-append">
            <div class="input-group-text">

            </div>
        </div>
    </div>
    <div class="input-group mb-3">
        {{ form_widget(registrationForm.user.prenom,{'attr': {'class': 'form-control','placeholder':'Nom de famille'}}) }}
        <div class="input-group-append">
            <div class="input-group-text">

            </div>
        </div>
    </div>

    <div class="input-group mb-3">
        {{ form_widget(registrationForm.user.email,{'attr': {'class': 'form-control','placeholder':'Email'}}) }}
        <div class="input-group-append">
            <div class="input-group-text">

            </div>
        </div>
    </div>

    <div class="input-group mb-3">
        {{ form_widget(registrationForm.user.tel,{'attr': {'class': 'form-control','placeholder':'Numéro de téléphone'}}) }}
        <div class="input-group-append">
            <div class="input-group-text">
                <span class="fas fa-phone"></span>
            </div>
        </div>
    </div>

    <div class="input-group mb-3">
        {{ form_widget(registrationForm.user.countries,{'attr': {'class': 'form-control','placeholder':'Pays'}}) }}
        <div class="input-group-append">
            <div class="input-group-text">

            </div>
        </div>
    </div>
    <div class="input-group mb-3">
        {{ form_widget(registrationForm.user.states,{'attr': {'class': 'form-control','placeholder':'État'}}) }}
        <div class="input-group-append">
            <div class="input-group-text">

            </div>
        </div>
    </div>

    <div class="input-group mb-3">
        {{ form_widget(registrationForm.user.cities,{'attr': {'class': 'form-control','placeholder':'Ville'}}) }}
        <div class="input-group-append">
            <div class="input-group-text">

            </div>
        </div>
    </div>

    <div class="input-group mb-3">
        {{ form_widget(registrationForm.user.ville,{'attr': {'class': 'form-control','placeholder':'Ville'}}) }}
        <div class="input-group-append">
            <div class="input-group-text">

            </div>
        </div>
    </div>
    <div class="input-group mb-3">
        {{ form_widget(registrationForm.user.postal,{'attr': {'class': 'form-control','placeholder':'Code postal'}}) }}
        <div class="input-group-append">
            <div class="input-group-text">

            </div>
        </div>
    </div>

    <div class="input-group mb-3">
        {{ form_widget(registrationForm.user.pin,{'attr': {'class': 'form-control','placeholder':'Code PIN'}}) }}
        <div class="input-group-append">
            <div class="input-group-text">

            </div>
        </div>
    </div>

    {{ form_row(registrationForm.agreeTerms) }}

    <button type="submit" class="btn btn-primary">S'inscrire</button>
    {{ form_end(registrationForm) }}

{% endblock %}


